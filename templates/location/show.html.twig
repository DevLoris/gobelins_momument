{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>{{ location.country }} - {{ location.city }}</h1>



    <h1>Monuments de cette ville</h1>
    <div class="card-list">
        {% for monument in location.monuments %}
            <div class="card">
                <a href="{{ path('monument_show', {'id': monument.id}) }}">
                    <div class="card-thumb">
                        <img src="{{ vich_uploader_asset(monument.image, 'imageFile') }}" alt="{{ monument.name }}" />
                    </div>
                    <div class="card-name">
                        <strong>{{ monument.name }}</strong>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
